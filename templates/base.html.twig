<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Welcome!{% endblock %}</title>
        
        {% block stylesheets %}
            <link rel="preconnect" href="https://fonts.googleapis.com">
            <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
            <link href="https://fonts.googleapis.com/css2?family=Prata&family=Unna:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">
            <link rel="stylesheet" href="/more/dist/star-rating.css">
            <link rel="stylesheet" href="/node_modules/owl.carousel/dist/assets/owl.carousel.css">
            <link rel="stylesheet" href="/node_modules/bootstrap/dist/css/bootstrap.min.css">
            <link rel="stylesheet" href="/node_modules/font-awesome/css/font-awesome.min.css">
            <link rel="stylesheet" href="/node_modules/lightbox2/dist/css/lightbox.min.css"> 
            <link rel="stylesheet" href="/node_modules/aos/dist/aos.css">
            <link rel="stylesheet" href="/template/css/style.css">
            


        {% endblock %}


        
    </head>
    <body>
        {% for type, messages in app.flashes %}
            <div class="alert alert-{{ type }}">
                {% for message in messages %}
                    {{ message }}
                {% endfor %}
            </div>
        {% endfor %}


        {% block top_page_message_block %}
            {% if promotion is defined %}
                 {% if promotion != null %}
                    <div class="top-message-block">
                    {{ promotion.title }}
                </div>
                {% endif %}
            {% endif %}
           
            
        {% endblock %}

        {% block navbar %}
           

    <!-- start navbar-->


    <nav class="navbar navbar-expand-lg bg-body-tertiary" id="mobile-navbar" style="display: none;">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">
            <img src="/logo.png" width="auto" height="100%" alt="" style="max-height: 40px;">
          </a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="{{ path('app_main') }}">ACCUEIL</a>
              </li>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    SHOP
                </a>

                
                <ul class="dropdown-menu" style="background-color: transparent;
                padding: 10px;
                color: white;
                border: none;
                ">
                   
                  {% for item in categories %} 

                    <li class="nav-item">
                        <a class="nav-link " >
                            {{ item.label }}
                        </a>
                        <ul class="dropdown-menu show" >
                          
                          {% for category in item.subCategories %}
                          <div class="block-category-item">
                            <li><a class="dropdown-item" href="{{ path('collections_route',{id:category.id}) }}"> <img src="/uploads/icons/{{category.icon}}"class="category-icon" alt=""> {{ category.label }}</a></li> 
    
                            </div>
                        {% endfor %}
                        </ul>
                      </li>
                {% endfor %}

                </ul>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="{{ path('contact_us_route') }}">CONTACT</a>
              </li>

              <li class="nav-item"  id="nav-bar-open-cart">
                <a class="nav-link" href="{{ path('contact_us_route') }}">
                    <i class="fa fa-shopping-basket" aria-hidden="true"></i> PANIER
                </a>
              </li>
              
 
                
            </ul>
          </div>
        </div>
      </nav>



    <nav class="container app-navbar d-flex justify-content-between" id="web-navbar">
        <div class="logo">
            <img src="/logo.png" width="auto" height="100%" alt="">
        </div>
        <div class="main-menu">
            <div class="menu d-flex">
                <div class="menu-item "> 
                    <a href="{{ path('app_main') }}">
                        ACCUEIL
                    </a>
                </div>
                <div class="menu-item nav-dropdown-menu">
                    SHOP
                    <i class="fa fa-chevron-down dropdown-arrow"></i>
                    <div class="dropdown-content">
                        {% for item in categories %}
                            <div class="block-category">
                                <div class="category-dropdown-title">{{ item.label }}</div>
                                {% for category in item.subCategories %}
                                    <div class="block-category-item">
                                        <a href="{{ path('collections_route',{id:category.id}) }}" class="dropdown-category-link"><img src="/uploads/icons/{{category.icon}}"class="category-icon" alt=""> {{ category.label }}</a>
                                    </div>
                                {% endfor %}
                            </div>
                        {% endfor %}


                        <div class="block-category">
                            <a href="{{ path('packs_route') }}">
                                <div class="category-dropdown-title">Nos packs</div>
                            </a>
                             
                            
                        </div>
                        
                        
                    </div>
                </div> 
                
                <div class="menu-item">
                    <a href="{{ path('contact_us_route') }}">
                        CONTACT
                    </a>
                </div>
                
            </div>
        </div>
        <div class="actions d-flex">
            
         
            <div class="nav-shopping-cart" id="nav-bar-open-cart-web">
                <i class="fa fa-shopping-basket" aria-hidden="true"></i>
            </div>
        </div>
    </nav>
        {% endblock %}
        {% block body %}
        
        {% endblock %}


        {% block footer %}
            <footer>
                <div class="div">
                    <div class="row">
                        <div class="col-12 col-sm-6">
                            <img src="/logo.png" width="180px" alt="">
                        </div>
                        <div class="col-12 col-sm-6">
                            <ul>
                                <li><a href="#">Politique de confidentialité</a></li>
                                <li><a href="#">Mentions légales</a></li> 
                                <li><a href="#">Livraison et Retour</a></li>
                                <li><a href="{{ path('contact_us_route') }}">Contact</a></li>
                              </ul>
                        </div>
                    </div>
                      
                </div>

                <div class="follow-us">
                    
                    <div class="title">
                        Suivez-nous
                    </div>
                    <div class="descreption">
                        et partagez vos instants parfumés
                    </div>


                    <div class="social-media d-flex justify-content-end">
                        <div class="social-media-item">
                            <a href="https://www.facebook.com/profile.php?id=61572048984067" target="_blank">
                                <i class="fa fa-facebook" aria-hidden="true"></i>
                            </a> 
                       </div>
                       
                       <div class="social-media-item">
                            <a href="https://www.instagram.com/sentalia.tn?igsh=MXAwZndnbmF5ODE5dA%3D%3D" target="_blank">
                                <i class="fa fa-instagram" aria-hidden="true"></i>
                            </a> 
                        </div>
                        

                       
                    </div>
                </div>
            </footer>








            <div id="cart-panel" class="cart-panel hidden">
                <div class="cart-header">
                  <h2>Panier</h2> 
                  <button id="close-cart" type="button" class="btn-close" aria-label="Close"></button>
                </div>
                <div id="cart-items" class="cart-items"></div>
                <div class="cart-footer">
                  <div class="total-price">Total: <span id="cart-total">0</span> TND</div>
                  <a href="{{ path('checkout_route') }}" id="checkout-btn" class="checkout-btn btn btn-theme w-100">Valider ma commande</a>
                </div>
              </div>
              
        {% endblock %}


        {% block javascripts %}
            <script src="/node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
            <script src="/node_modules/jquery/dist/jquery.min.js"></script>
            <script src="/node_modules/owl.carousel/dist/owl.carousel.js"></script>
            <script src="/more/dist/star-rating.min.js"></script>
            <script src="/node_modules/sweetalert2/dist/sweetalert2.all.min.js"></script>
            <script src="/node_modules/lightbox2/dist/js/lightbox.min.js"></script>
            <script src="/node_modules/aos/dist/aos.js"></script>
            <script src="/js/main.js"></script>

            
        {% endblock %}
    </body>
</html>
